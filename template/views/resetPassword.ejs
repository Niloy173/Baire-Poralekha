<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/user/signup.css" />
  </head>
  <body>
    <nav id="navbar">
      <div class="logo"><a href="#">LOGO</a></div>
    </nav>

    <div class="reset_password">
      <form class="regFrom" action="" method="post">
        <% if(typeof message != 'undefined') { %>

        <label>
          <span
            id="msg"
            style="
              color: rgb(238, 0, 0);
              margin: 1em 0;
              padding: 0px 10px 25px 30px;
              font-weight: bold;
            "
            ><%= message %></span
          >
          <br />
          <br />
        </label>

        <% } %>

        <label for="Email"><b class="email">Email Address</b></label>
        <input
          class="emailclass text"
          type="text"
          placeholder="Enter Email Address"
          name="uemail"
        /><br />
        <span class="emailspan">
          we will send a link to your email for verification </span
        ><br />

        <br />
        <br />

        <div class="submit">
          <button type="submit">Send</button>
        </div>
      </form>
    </div>
  </body>
</html>
