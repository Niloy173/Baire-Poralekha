<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/user/signup.css" />
  </head>
  <body>
    <nav id="navbar">
      <div class="logo"><a href="#">LOGO</a></div>
    </nav>

    <div class="reset_password">
      <form class="regFrom" action="" method="post">
        <% if(typeof message != 'undefined') { %>

        <label>
          <span
            id="msg"
            style="
              color: rgb(238, 0, 0);
              margin: 1em 0;
              padding: 0px 10px 25px 30px;
              font-weight: bold;
            "
            ><%= message %></span
          >
          <br />
          <br />
        </label>

        <% } %>

        <label for="Password"><b class="pass">Password</b></label>
        <input
          id="upass"
          type="password"
          placeholder="Password"
          name="upassword"
        /><br />

        <label for="Password"><b class="pass">Confirm Password</b></label>
        <input
          id="ucpass"
          type="password"
          placeholder="Confirm Password"
          name="ucpassword"
        />

        <br />

        <div class="submit">
          <button type="submit">Save</button>
        </div>
      </form>
    </div>
  </body>
</html>
