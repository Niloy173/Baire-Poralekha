      </div>

      <div class="notice">
        <% notice.forEach(element => { %>

        <a href="#" style="text-decoration: none; color: #000">
          <div class="notice_card_list">
            <div class="card">
              <p class="notice_title"><%= element.title %></p>

              <span class="notice_date">
                <i class="ph-clock-bold"></i>
                <%= element.date.toString().substr(0,15) %></span
              >
            </div>
          </div>
        </a>

        <% }); %>
